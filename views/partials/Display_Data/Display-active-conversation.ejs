<% if (isSelected) { %>
  <label for="change-messages">
    <a href="/messages?id=<%= id %>#bottom" class="selected-convo position-relative d-flex align-items-start text-decoration-none pe-none py-3 px-4">
      <div class="position-absolute top-0 start-0 bg-primary w-3 h-100"></div>
<% } else { %> 
  <a href="/messages?id=<%= id %>#bottom" class="d-flex align-items-start text-decoration-none bg-faded-primary-hover py-3 px-4">
<% } %>

<img src="<%= imgPath %>" class="smedium-rc rounded-circle" alt="<%= username %>">
<div class="ps-2 ms-1">
    <div class="mb-1">
      <h6 class="mb-0 me-2"><%=username%></h6>
    </div>
      <p class="convo-snippet fs-sm text-body mb-0">
        <% if (conversations[i].messages[conversations[i].messages.length - 1]) { %>
          <% if (conversations[i].messages[conversations[i].messages.length - 1].viewedMessage === false && conversations[i].users[conversations[i].messages[conversations[i].messages.length - 1].sender].userId !== authuser.id && conversations[i].id !== selectedConversation.id) { %>
            <b><%= conversations[i].messages[conversations[i].messages.length - 1].content%></b>
          <% } else { %>
            <%= conversations[i].messages[conversations[i].messages.length - 1].content %>
          <% } %>
        <% } else { %> 
          No message
        <% } %>
    </p>

