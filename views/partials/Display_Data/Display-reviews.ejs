<!-- Not Respnsive -->
<section class="mt-3 pb-0">
   <% for(let i = reviews.length - 1; i >= 0; i--) { %>
   <div class="card card-hover px-<%=padding%> py-4 mb-2 border-0">
      <div class="d-flex align-items-center">
         <div class="mb-2">
            <h6 class="fw-semibold text-primary mb-0"><%=reviews[i].sender%></h6>
         </div>
         <div class="ms-auto me-5"><%- include('../Rating', {rating: reviews[i].note}) %></div>
      </div>

      <p class="my-0"><%=reviews[i].content%></p>
   </div>
   <hr class="my-3 opacity-70" />
   <% } %>

   <div class="mt-5"><%- include('../Pagination', {nextPage, currentPage: parseInt(query.reviewPage), queryName: 'reviewPage'}) %></div>
</section>
