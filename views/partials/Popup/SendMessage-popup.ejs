<div class="popup-dialog" style="max-width:none;">
   <div class="rounded px-4 py-4 my-4">
      <form action="/send-message/<%=Reciver%>" method="POST">
         <h2 class="h2 mb-4">Conversation Settings</h2>
         <div class="d-flex align-items-center">
            <input class="form-check-input m-0" type="radio" name="type" id="default" value="default" required />
            <label class="form-check-label px-2" for="default">Default <span class="opacity-70">(Not
                  Recommended)</span>
            </label>
         </div>

         <div class="d-flex align-items-center">
            <input class="form-check-input m-0" type="radio" name="type" id="semi-hidden" value="semi-hidden" required
               checked />
            <label class="form-check-label px-2" for="semi-hidden">Semi-Hidden</label>
         </div>

         <div class="d-flex align-items-center">
            <input class="form-check-input m-0" type="radio" name="type" id="Hidden" value="hidden" required />
            <label class="form-check-label px-2" for="Hidden">Hidden</label>
         </div>

         <hr class="my-2" />

         <div class="d-flex align-items-center">
            <input class="form-check-input m-0" type="checkbox" name="timestamps" id="timestamps" />
            <label class="form-check-label px-2" for="timestamps">Add timestamps</label>
         </div>

         <hr class="mt-2" />

         <input type="checkbox" id="advanced-settings" hidden />
         <div class="d-flex align-items-center">
            <label for="advanced-settings" class="my-2"><b>See Advanced Settings</b></label>
            <%- include ("../../../public/assets/img/icons/caret-down.svg") %>
         </div>

         <div class="advanced-settings">
            <div class="d-flex align-items-center">
               <input class="form-check-input m-0" type="radio" name="pgpSettings" id="ownpgp" value="ownPgp" />
               <label class="form-check-label px-2" for="ownpgp">Include my own Pgp Key</label>
            </div>

            <div class="d-flex align-items-center">
               <input class="form-check-input m-0" type="radio" name="pgpSettings" id="nopgp" value="noPgp" />
               <label class="form-check-label px-2" for="nopgp">Do not Include a Pgp Key</label>
            </div>

            <div class="d-flex align-items-center">
               <input class="form-check-input m-0" type="radio" name="pgpSettings" id="otherpgp" value="otherPgp" />
               <label class="form-check-label px-2" for="otherpgp">Include Another Pgp
                  <span class="opacity-70 fs-sm ms-2">(Advanced User Only)</span></label>
            </div>

            <div class="otherPgpTextarea">
               <textarea class="form-control mt-2" name="otherPgpKeys" placeholder="Pgp Key you want to use"
                  minlength="2" maxlength="1000" style="resize: none;min-height: 80px;height: 80px;"></textarea>
            </div>
         </div>

         <hr class="mb-2" />
         <div class="edit-content" contenteditable="true">
            <textarea class="form-control" name="message" placeholder="Type your message..." minlength="2"
               maxlength="1000" required></textarea>
         </div>
         <div class="d-flex justify-content-end button-group mt-4">
            <button type="submit" class="btn btn-primary btn-lg shadow-primary me-2">Send</button>
            <label for="<%=checkboxInputId%>" class="btn btn-danger btn-lg shadow-danger">Cancel</label>
         </div>
      </form>
   </div>
   <label for="<%=checkboxInputId%>" class="popup-close"></label>
</div>