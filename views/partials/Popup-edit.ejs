<!--designed to work with css input popup technique - no js -->
<div class="popup-dialog">
   <div class="rounded py-4 px-4" style="min-width: 35rem;">
      <div class="text pb-4"><b>Edit This Message</b></div>
      <form action="<%=action%>" method="POST">
        <textarea rows="2" name="newMessage" placeholder="Edit this Message" class="form-control form-control-lg mb-4" minlength="2" maxlength="1000" required><%=currentMessage%></textarea>
      <div class="d-flex">
        <button type="submit" class="confirm-button btn btn-primary">Edit this Message</button>
      </form>
         <label for="<%=checkboxInputId%>" class="btn btn-danger cancel-button ms-auto">Cancel</label>
      </div>
   </div>
</div>
