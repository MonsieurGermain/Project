<%- include('partials/Statics/Head', {page: '- Disputes List'}) %>

<body class="documentation-view">
  <%- include('partials/Statics/Navbar') %>
  <!-- Page wrapper for sticky footer -->
  <!-- Wraps everything except footer to push footer to the bottom of the page if there is little content -->
  <input id="mobile-menu-toggle" type="checkbox" hidden />
  <label for="mobile-menu-toggle"
    class="docs-aside-open-close"><%- include ("../public/assets/img/icons/move-left.svg") %></label>
  <main class="page-wrapper">
    <label class="clickout-mobile-menu" for="mobile-menu-toggle"></label>
    <div>
      <%- include('partials/Admin-Sidebar') %>

      <!-- Page container -->
      <div class="docs-con pt-5">

        <div class="container-fluid container pt-4 pt-lg-5 pb-2 pb-lg-4">

          <% if (success.length) { %>
          <div class="pt-3 pb-4 py-sm-4 pt-lg-4">
            <%- include('partials/Flash-message', {message: success, type : 'success'}) %>
          </div>
          <% } %>

          <% if (query.adminDispute) { %>
          <div>
            <h2>Take on new Disputes :</h2>
          </div>
          <% if (!disputes.length) { %>
          <h4 class="my-3">You dont have any Disputes Taken</h3>
            <a href="/disputes" class="my-3">Go take somes...</a>
            <% } %>
            <% } else { %>
            <div>
              <h2>Your Disputes :</h2>
            </div>
            <% if (!disputes.length) { %>
            <h4 class="my-3">No dispute Needing resolving !</h3>
              <h5 class="my-3">Keep it up !</h5>
              <% } %>
              <% } %>


              <% for(let i = 0; i < disputes.length; i++) { %>
              <article class="dispute-card card card-hover border-0 shadow-sm overflow-hidden mt-4">
                <div class="row g-0">
                  <div>
                    <div class="card-body">
                      <div class="d-flex flex-wrap align-items-center justify-content-between mb-2">
                        <p class="mb-2 me-2">Order id: <a
                            href="/order-resume/<%=disputes[i].id%>"><%=disputes[i].id%></a></p>
                        <p class="mb-2">Status: <span> <span class="ms-2 badge bg-danger">Dispute in
                              Progress</span></span></p>
                      </div>
                      <h3 class="h4">
                        <a href="/order-resume/<%=disputes[i].id%>"><%=disputes[i].product_title%></a>
                      </h3>

                      <span>
                        <p class="mb-0">Total Price:</p>
                        <p class="d-flex align-items-center fw-bold text-decoration-none me-3">
                          <%= disputes[i].total_price %> $
                        </p>
                      </span>

                      <hr class="mt-4 mb-2">

                      <div class="d-flex align-items-center justify-content-between flex-wrap">
                        <span class="mt-2">
                          <p class="mb-0">Vendor:</p>
                          <a href="/profile/<%=disputes[i].vendor%>?productPage=1&reviewPage=1"
                            class="d-flex align-items-center fw-bold text-decoration-none">
                            <%= disputes[i].vendor%>
                          </a>
                        </span>
                        <span class="mt-2 mx-3">
                          <p class="mb-0">Buyer:</p>
                          <a class="d-flex align-items-center fw-bold text-decoration-none">
                            <%= disputes[i].buyer%>
                          </a>
                        </span>

                        <span class="mt-2 mx-3 responsive-width">
                          <p class="mb-0">Admin:</p>
                          <% if (disputes[i].admin) { %>
                          <p class="mb-0"><%=disputes[i].admin%></p>
                          <% } else { %>
                          <p class="mb-0">Awaiting Admin...</p>
                          <% } %>
                        </span>


                        <% if (query.adminDispute) { %>
                        <span class="mt-2 full-width">
                          <a href="/order-resume/<%=disputes[i].id%>" class="btn btn-primary">See Disputes >></a>
                        </span>
                        <% } else { %>
                        <span class="mt-2 full-width">
                          <form action="/disputes/<%=disputes[i].id%>" method="POST">
                            <button type="submit" class="btn btn-primary">Take Disputes >></button>
                          </form>
                        </span>
                        <% } %>


                      </div>
                    </div>
                  </div>
                </div>
              </article>
              <% } %>
        </div>
      </div>
    </div>
  </main>
  <%- include('partials/Statics/Footer') %>
</body>